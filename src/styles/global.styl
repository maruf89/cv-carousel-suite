html,
body
    text-size-adjust 100%
    height 100%

body
    font normal $root-font-px \/ em(20) $font-regular
    color $basically-black
    width 100%

//  Retina + non retina span images
span.img
    display block
    max-width 100%
    width 100%
    background-repeat no-repeat
    background-position center center
    background-size contain

img
    color $white

button
    border none

b,
strong,
.strong
    $font-bold()

i,
em,
.em
    $font-italic()

small
    line-height 1em
    font-size .8em

ul.default
    list-style inherit

    li
        display list-item
        margin-left 1.25em

input,
textarea
    font-size 1em
    box-shadow none

::-webkit-input-placeholder /* WebKit browsers */
    font italic 1em $font-italic-val

:-moz-placeholder  /* Mozilla Firefox 4 to 18 */
    font italic 1em $font-italic-val

::-moz-placeholder /* Mozilla Firefox 19+ */
    font italic 1em $font-italic-val

:-ms-input-placeholder /* Internet Explorer 10+ */
    font italic 1em $font-italic-val

iframe
    max-width 100%

a
    text-decoration none
    text-decoration inherit

h1, .h1,
h2, .h2,
h3, .h3,
h5, .h5,
h6, .h6
    font-family $font-alternate
    line-height 1.2em
    color $basically-black
    

h4, .h4
    font-family $font-regular
    line-height 1.2em
    color $green

h1,
.h1
    font-size em(50)

h2,
.h2
    font-size em(40)

h3,
.h3
    font-size em(30)

h4,
.h4
    font-size em(20)

h5,
.h5
    font-size em(16)

h6,
.h6
    font-size em(14)

// Fuck you Avast
.aos.aos-overlay
    display none !important
    z-index -1 !important
