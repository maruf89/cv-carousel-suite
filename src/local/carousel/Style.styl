.p-carousel
    width 100%
    height 100%
    background blue

    .head
        padding 1.5em 0 0 .25em

    .tracker-canvas
        fixed top left
        z-index 10
        margin-left 50%
        transform translateX(-50%)
        opacity .9
        height 100%

    .old-tracker-canvas
        position fixed
        z-index 10
        opacity .9
        top em(10)
        right em(10)

.fixed-top-left
    position fixed
    top em(10)
    left em(10)
    z-index 100

    /* Add to docs */
#scrolling{/*frame*/
    z-index 15
    position:fixed;
    top:58%;

    background:#FF8383;/*FF473D*/
    opacity: .5;
    height:38%;
    width:100%;

    overflow: hidden;
}

ul {
    /*Add if you want to disable the option of selecting the text while sliding*/
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;

    margin: 0;
    padding: 0;
    position: absolute;
    /*top:10%;*/
    margin-top:4vh;
    height:80%;

    list-style-type: none;

    -webkit-transform-style: preserve-3d;
	-ms-transform-style: preserve-3d;
	transform-style: preserve-3d;
}

li {

    font-size:8vmin;/*cool*/
    float: left;
    width:25vw;
    min-width: 250px;
    height: 100%;
    color: #000;
    font-weight: 300;
    text-align: center;
    border-radius: 30px;
    -webkit-border-radius: 30px;
    -o-border-radius: 30px;
    -moz-border-radius: 30px;
    cursor: pointer;
    background: #FFF;
    -webkit-transform:  scale(0.95);
    -ms-transform:  scale(0.95);
    -moz-transform:  scale(0.95);
    transform: scale(0.95);
}

.itemslide-active
{/*applied to current active item*/
    -webkit-transform:  scale(1);
    -ms-transform:  scale(1);
    -moz-transform:  scale(1);
    transform: scale(1);
}